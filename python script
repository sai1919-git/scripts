pipeline{
agent any
stages{
stage('checkout'){
steps{
git url: 'https://github.com/sai1919-git/script',branch:'main'
}
}
stage('install dependecies'){
steps{
echo 'installing '
sh 'pyhton3 -m venv venv'
sh 'venv/bin/active && pip install -r requirements.txt .
}
}
stage('testing'){
steps{
sh 'venv/bin/active && pytest tests/'
}
}
}
}
